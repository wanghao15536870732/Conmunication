<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
android:id="@+id/right_image_layout"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:layout_gravity="right"
android:layout_marginTop="5dp"
android:orientation="vertical">


<TextView
    android:id="@+id/chat_image_time"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:gravity="left"
    android:text="聊天的时间"/>
<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/chatto_bg_focused">
        <!--处与整个text的左边-->
        <com.example.lab.android.nuc.chat.Tools.view.BubbleImageView
            android:id="@+id/chat_image"
            android:layout_width="70dp"
            android:layout_height="150dp"
            android:layout_margin="2dp"/>
    </LinearLayout>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/chat_image_icon"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="5dp"
            android:src="@drawable/icon"
            />
        <ImageView
            android:id="@+id/mysend_fail_img"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_gravity="center_horizontal"
            android:background="@mipmap/msg_state_fail_resend_pressed" />
    </LinearLayout>

</LinearLayout>

</LinearLayout>