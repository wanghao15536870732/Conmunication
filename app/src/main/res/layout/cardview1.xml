<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/message_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_weight="5">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/friend_icon"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:src="@drawable/p1"
        android:layout_margin="10dp"
        />

    <TextView
        android:id="@+id/friend_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="93dp"
        android:layout_marginTop="19dp"
        android:text="18年安卓实验室"
        android:textColor="#000000"
        android:textSize="16sp"
        android:layout_marginLeft="93dp"
        android:layout_alignParentLeft="true" />

    <TextView
        android:id="@+id/soonText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/friend_icon"
        android:layout_alignStart="@+id/friend_name"
        android:text="16-金浩：[图片]"
        android:textColor="#000000"
        android:textSize="12sp"
        android:layout_alignLeft="@+id/friend_name"
        android:layout_marginBottom="10dp"/>

    <TextView
        android:id="@+id/time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/friend_name"
        android:layout_marginEnd="14dp"
        android:text="下午10:24"
        android:layout_alignParentRight="true"
        android:layout_marginRight="14dp" />


</RelativeLayout>